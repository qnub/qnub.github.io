.sidebar
    width sidebar-width
    float left
    margin-left marginx2

    @media screen and (max-width: 999px)
        display none

    &__item
        margin-top 40px

        &:first-child
            margin-top 20px

    &__title
        margin 0
        font-size subheader-fs

    &__subscribe
        list-style none
        margin 0
        padding 0

        &-item
            margin-top 10px

        &-link
            padding-left 40px
            height 30px
            line-height 30px
            display inline-block
            position relative

            &:before
                content ''
                width 30px
                height 30px
                display inline-block
                position absolute
                top 0
                left 0
                background url('../img/sprite.png')
                transition opacity 300ms

            &:hover:before
                opacity .8
                transition opacity 0

            &:active:before
                opacity .5
                transition opacity 0

            &_rss:before
                background-position -205px 0

            &_rss-extra:before
                background-position -205px 0

            &_podster:before
                background-position -295px 0

            &_podfm:before
                background-position -205px -30px

            &_itunes:before
                background-position -295px -30px

            &_pushbullet:before
                background-position -235px 0

            &_gikme:before
                background-position -145px -60px

            &_registr:before
                background-position -175px -60px

    &__socials
        padding 0
        margin 10px 0 0 0
        list-style 0
        font-size 0

        &-item
            width 30px
            height 30px
            margin 0 10px 12px 0
            display inline-block

        &-link
            display inline-block
            background url('../img/sprite.png')
            width 30px
            height 30px
            overflow hidden
            text-indent -1000px
            transition opacity 300ms

            &:hover
                opacity .8
                transition opacity 0

            &:active
                opacity .5
                transition opacity 0

            &_vk
                background-position -145px -30px

            &_tw
                background-position -175px 0

            &_fb
                background-position -265px -30px

            &_gp
                background-position -265px 0

            &_tm
                background-position -175px -30px

            &_yt
                background-position -145px 0

            &_ig
                background-position -235px -30px

            &_gh
                background-position -205px -60px

            &_in
                background-position -235px -60px

            &_twch
                background-position -265px -60px

            &_tg
                background-position -295px -60px

    &__donate
        margin 10px 0 0 0
        padding 0
        list-style none

    &__paypal
        outline none
        transition opacity 300ms

        &:hover
            opacity .8
            transition opacity 0

        &:active
            opacity .5
            transition opacity 0

.dsq-widget-list
    margin 0
    padding 0

.dsq-widget-item
    background #fff
    padding 10px

.dsq-widget-user
    color link-color
    text-decoration none
    padding 0 10px

.dsq-widget-user:hover
    color link-hover-color

.dsq-widget-user:active
    color link-active-color

.dsq-widget-comment
    display block
    clear both
    margin 10px 0
    font-family serif-family
    font-size meta-fs
